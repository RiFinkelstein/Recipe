<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecipeMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecipeMaui"
    Shell.FlyoutBehavior="Disabled"
    Title="RecipeMaui">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Home}"
        Route="home" />

        <ShellContent
        Title="Recipe Search"
        ContentTemplate="{DataTemplate local:RecipeSearch}"
        Route="RecipeSearch" />
    </TabBar>


    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        Route="Login"/>

</Shell>
